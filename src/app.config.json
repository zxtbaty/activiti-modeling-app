{
    "$schema": "../node_modules/@alfresco/adf-core/app.config.schema.json",
    "authType" : "OAUTH",
    "bpmHost": "http://localhost:4100/api",
    "oauth2": {
        "host": "http://localhost:4100/auth",
        "authPath": "/protocol/openid-connect/token/",
        "clientId": "activiti",
        "scope": "openid",
        "secret": "",
        "implicitFlow": true,
        "silentLogin": true,
        "redirectSilentIframeUri": "/assets/silent-refresh.html",
        "redirectUri": "/",
        "redirectUriLogout": "/login"
    },
    "logLevel": "trace",
    "application": {
        "name": "Activiti Modeling Application"
    },
    "languagePicker": true,
    "roles": [
        "ACTIVITI_MODELER"
    ],
    "languages": [
        {
            "key": "en",
            "label": "English"
        },
        {
            "key": "ja",
            "label": "Japanese"
        }
    ],
    "process-modeler": {
        "priorities": [
            {
                "key": "low",
                "label": "APP.PROCESS_EDITOR.PRIORITIES.LOW"
            },
            {
                "key": "medium",
                "label": "APP.PROCESS_EDITOR.PRIORITIES.MEDIUM"
            },
            {
                "key": "high",
                "label": "APP.PROCESS_EDITOR.PRIORITIES.HIGH"
            }
        ]
    },
    "navigation": {
        "main": [
            {
                "icon": "apps",
                "label": "APP.HOME.NAVIGATION.PROJECTS.LABEL",
                "title": "APP.HOME.NAVIGATION.PROJECTS.TOOLTIP",
                "disabled": false,
                "route": {
                    "url": "/dashboard/projects"
                }
            }
        ]
    }
}
